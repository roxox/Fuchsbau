{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
<div>
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 align="center" style="background: rgba(249, 249, 249, 0.5);
                border: 1px solid #b6b6b6;
                font-family: 'CANDYINC';
                color: #61625d;
                /*color: #d94a37;*/
                font-size: 33px;
                border-radius: 3px">
                Emailadresse bearbeiten
            </h4>
            <br>
            <div align="center">
                <span>Na dann mal los, her mit der neuen Emailadresse.</span><br>
            </div>
        </div>
        <div class="modal-body">
            {{ form_start(form, {'action': path('add_email_by_current_person')}) }}
            <table style="width: 100%">
                <tr>
                    <td>
                        <table style="width: 70%">
                            <tr>
                                <td style="width: 100%">
                                    <table style="width: 100%">
                                        <tr>
                                            <td style="width: 100%; font-weight: 100; font-size: 12px">
                                                {{ form_row(form.emailadresse) }}
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>

                            <tr>
                                <td style="width: 100%">
                                    <table style="width: 100%">
                                        <tr>
                                            <td style="width: 100%; font-weight: 100; font-size: 12px">
                                                {{ form_row(form.privatGeschaeft) }}
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>

                        </table>
                    <td style="width: 2%; border-right: 1px solid #b6b6b6;"></td>
                    <td style="width: 2%"></td>
                    <td style="width: 38%">
                        <table>
                            <tr>
                                <td style="font-size: 16px; font-weight: 200">
                                    Hinweise:
                                    <span style="font-size: 14px; font-weight: 200">
                                    <br><br>
                                    Die Emailadresse von der Registrierung wurde automatisch hinzugef√ºgt.
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            <div>

                <hr>
                <button type="submit" class="btn-link-fx-greyred btn-xs">
                    {#<span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>#}
                    Speichern
                </button>

                <button type="submit" class="btn-link-fx-redred btn-xs">
                    Abbrechen
                </button>

                <button type="button" class="close " data-dismiss="modal">&times;</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>