{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
<div>

    <!-- Modal content-->
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Adresse hinzufügen</h4>
        </div>
        <div class="modal-body">
            <div class="text">
                <p>Umgezogen? Zweitwohnung? Oder doch ein neues Haus? Wie ist denn die neuen Adresse.</p><br>
            </div>
            <div class="text">
                {{ form_start(form, {'action': path('add_address_by_current_person_modal')}) }}
                {{ form_row(form.strasse) }}
                {{ form_row(form.hausnummer) }}
                {{ form_row(form.postleitzahl) }}
                {{ form_row(form.ort) }}
                {{ form_row(form.privatGeschaeft) }}
                <div>
                    <br>
                    <input type="submit" class="btn btn-default btn-sm" value="hinzufügen">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

</div>
