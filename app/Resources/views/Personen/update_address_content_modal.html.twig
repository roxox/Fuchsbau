{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
<div>

    <!-- Modal content-->
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Adresse ändern</h4>
        </div>
        <div class="modal-body">
            <div class="text">
                <p>Umgezogen? Zweitwohnung? Oder doch ein neues Haus? Wie ist denn die neuen Adresse.</p><br>
            </div>
            <div class="text">
                {{ form_start(form, {'action': path('edit_address_by_current_person_modal', {'addressId': adresse.getId() })}) }}
                {{ form_row(form.strasse) }}
                {{ form_row(form.hausnummer) }}
                {{ form_row(form.postleitzahl) }}
                {{ form_row(form.ort) }}
                {{ form_row(form.privatGeschaeft) }}
                <div>
                    <br>
                    <input type="submit" class="btn btn-default btn-sm" value="Ändern">
                    <button type="button" class="btn btn-default btn-xs"data-toggle="modal"
                            data-target="#editAddressPopup">Abbrechen
                    </button>

                    {# SNIPPET FOR CLOSE MODAL, OPEN ANOTHER ONE#}
                    {#<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addMailPopup" data-dismiss="modal"#}
                            {#href="{{ path('add_email_by_current_person_modal') }}">Close current, Launch Modal #1</button>#}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

</div>
