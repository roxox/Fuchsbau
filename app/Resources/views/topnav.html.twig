<section id="navigation">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span
                            class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span
                            class="icon-bar"></span> <span class="icon-bar"></span></button>
            </div>
            <div class="collapse navbar-collapse">
                {#<h2 style="color: #7f7f7f">{{ headline }}</h2></div>#}
                <ul class="nav navbar-nav pull-right">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li><a href="{{ path('homepage') }}"><span style="width: 100px; font-weight: 200; font-size: 21px"> Meine Projekte </span></a>
                        {% if user is defined %}
                            <li><a href="{{ path('display_current_person') }}"><span style="width: 100px; font-weight: 200; font-size: 21px">
                            {% if user.person.vorname != null and user.person.vorname != '' and user.person.nachname != null and user.person.nachname != '' %}
                                {{ user.person.vorname }} {{ user.person.nachname }}
                            {% else %}
                                {{ user.username }}
                            {% endif %}
                                    </span>
                                    <span style="width: 100px; font-weight: 200; font-size: 14px"> Profil bearbeiten</span></a></li>
                        {% else %}
                            <li><a href="{{ path('display_current_person') }}"> Profil bearbeiten</a>
                        {% endif %}
                        <li><a href="#"> </a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}"> <span style="width: 100px; font-weight: 200; font-size: 21px"> Log-Out</span></a></li>
                    {% else %}
                        <li><a href="{{ path('fos_user_security_login') }}"><span style="width: 100px; font-weight: 200; font-size: 21px"> Log-In</span></a></li>
                        <li><a href="{{ path('registration_register_user') }}"><span style="width: 100px; font-weight: 200; font-size: 21px"> Registrieren </span></a></li>

                    {% endif %}
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>
</section>
<!-- /.NAVIGATION -->

